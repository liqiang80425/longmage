<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--基样式-->
    <Style TargetType="Button" x:Key="buttonStyle">
        <Setter Property="Height" Value="40"></Setter>
        <Setter Property="Width" Value="50"></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    <!--注册样式-->
    <Style TargetType="Button" x:Key="RegButtonStyle" BasedOn="{StaticResource buttonStyle}">
        <Setter Property="Background" Value="red"></Setter>
    </Style>

    <!--登录样式-->
    <Style TargetType="Button" x:Key="LoginButtonStyle" BasedOn="{StaticResource buttonStyle}">
        <Setter Property="Background" Value="Red"></Setter>
    </Style>

    <!--其他样式-->
    <Style TargetType="Button" x:Key="OrtherButtonStyle" BasedOn="{StaticResource buttonStyle}">
        <Setter Property="Background" Value="Blue"></Setter>
    </Style>
</ResourceDictionary>